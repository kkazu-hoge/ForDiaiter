<header class="Header">
  <nav class="navbar navbar-expand-lg navbar-light p-2 nav_bg_color">
    <a class="navbar-brand icon_area" href="/admin/sign_in">
        <%= image_tag('app_icon1.png', size: '40x40') %>
      <b>　ForDiaiter</b>
    </a>
    <ul class="navbar-nav ml-auto">
      <li>
        <%= link_to new_customer_session_path, class: 'nav-link text-dark heaedr-link' do %>
          <i class="far fa-calendar-alt"></i>
        <% end %>
      </li>
    </ul>
  </nav>
  <input type="checkbox" class="openSidebarMenu" id="openSidebarMenu">
  <label for="openSidebarMenu" class="sidebarIconToggle">
    <div class="spinner diagonal part-1"></div>
    <div class="spinner horizontal"></div>
    <div class="spinner diagonal part-2"></div>
  </label>
  <div id="sidebarMenu">
    <ul class="sidebarMenuInner">
      <li>Menu <span>一覧</span></li>
      <% if admin_signed_in? %>
        <%= render "layouts/admin/afterLoginMenu" %>
      <% else %>
        <%= render 'layouts/admin/beforeLoginMenu' %>
      <% end %>
    </ul>
  </div>
</header>
    <% if customer_signed_in? %>
      <a class="navbar-brand icon_area" href="/home">
    <% else %>
      <a class="navbar-brand icon_area" href="/">
    <% end %>
        <%= image_tag('app_icon1.png', size: '40x40', class:"icon_image") %>
      <b>　ForDiaiter</b>
    </a>

<h1>イベントカレンダー</h1>
<div class='container'>
  <div class='row justify-content-center'>
    <div class="col-10">
        <%= month_calendar events: @pj_events do |date, pj_events| %>
          <%= date.day %>
            <% pj_events.each.with_index(1) do |pj_event, i| %>
            <div class="card">
              <div class="card-body">
              <!--%= i %>-->
              <%= "イベント" %>
              <%= "("+"#{pj_event.action_day.strftime("%m/%d")}"+")" %>
              </div>
            </div>
          <% end %>
        <% end %>
    </div>
  </div>
</div>

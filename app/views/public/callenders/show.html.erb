<h1>イベントカレンダー</h1>
<div class='container'>
  <div class='row justify-content-center'>
    <div class="col-12 col-lg-10 col-md-12 col-sm-12">
        <%= month_calendar events: @pj_events do |date, pj_events| %>
          <%= date.day %>
            <% pj_events.each.with_index(1) do |pj_event, i| %>
            <div class="card cards">
              <div class="card-body">
              <!--%= i %>-->
              <b>
                <%= "イベント" %>
                <%= "("+"#{pj_event.action_day.strftime("%m/%d")}"+")" %>
              </b>
              </div>
            </div>
          <% end %>
        <% end %>
    </div>
  </div>
</div>

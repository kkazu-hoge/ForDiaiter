                </div>
                <div class='col-5 col-lg-1 col-md-1 col-sm-4 '>
                  <%= f.label :"(姓)" %>
                </div>
                <div class='col-7 col-lg-3 col-md-4 col-sm-8'>
                  <%= f.text_field :last_name, class: "form-control" %>
                </div>
                <div class='col-5 col-lg-1 col-md-1 col-sm-4'>
                  <%= f.label :"(名)" %>
                </div>
                <div class='col-7 col-lg-3 col-md-4 col-sm-8'>
                  <%= f.text_field :first_name, class: "form-control" %>
                </div>
            </div>
          </div>
          <div class="field">
            <div class='row login_input_field'>
                <div class='col-5 col-lg-3 col-md-3 col-sm-4 required'>
                  <%= f.label :"公開用ネーム" %>
                </div>
                <div class='col-7 col-lg-3 col-md-4 col-sm-8'>
                  <%= f.text_field :public_name, class: "form-control" %>
                </div>
            </div>
          </div>
          <div class="field">
            <div class='row login_input_field'>
              <div class='col-5 col-lg-3 col-md-3 col-sm-4 required'>
                <%= f.label :"メールアドレス" %>
              </div>
              <div class='col-7 col-lg-7 col-md-9 col-sm-8'>
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
              </div>
            </div>
          </div>
          <div class="field">
            <div class='row login_input_field'>
              <div class='col-5 col-lg-3 col-md-3 col-sm-4 required'>
                <%= f.label :"性別" %>
              </div>
              <div class='col-4'>
                <div class='row'>
                  <div class="col-6">
                    <%= f.radio_button :sex, :man %>
                    <%= f.label "男性" %>
                  </div>
                  <div class="col-6">
                    <%= f.radio_button :sex, :woman %>
